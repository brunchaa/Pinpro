@model SkladisteRobe.Models.UlazIzlaz
@{
    ViewData["Title"] = "Unos ulaza/izlaza";
}

<h2>Unos ulaza/izlaza</h2>

<form asp-action="DodajUlazIzlaz" method="post">
    <input type="hidden" asp-for="MaterijalId" value="@ViewBag.MaterijalId" />
    <div class="form-group">
        <label asp-for="Tip"></label>
        <select asp-for="Tip" class="form-control">
            <option value="Ulaz">Ulaz</option>
            <option value="Izlaz">Izlaz</option>
        </select>
        <span asp-validation-for="Tip" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Kolicina"></label>
        <input asp-for="Kolicina" class="form-control" />
        <span asp-validation-for="Kolicina" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Spremi</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}